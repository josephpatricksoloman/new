pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/pipeline']], 
                    extensions: [], 
                    userRemoteConfigs: [[credentialsId: 'jose_github', url: 'https://github.com/josephpatricksoloman/new.git']]
            }
        }

        stage('Build') {
            steps {
                sh './hello_jenkins.sh'
            }
        }
    }

    post {
        always {
            mail to: 'joeboy.patrick@gmail.com',
                 subject: "Jenkins Build #${env.BUILD_NUMBER} - ${currentBuild.result}",
                 body: "Build result: ${currentBuild.result}\n\nCheck Jenkins for details: ${env.BUILD_URL}"
        }
    }
}




